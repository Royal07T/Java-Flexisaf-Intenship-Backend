// 1.Create Table in SQLite

CREATE TABLE users (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    first_name TEXT NOT NULL,
    last_name TEXT NOT NULL,
    address TEXT,
    occupation TEXT,
    reg_date TEXT
);

// 2. Insert Data into Table
INSERT INTO users (first_name, last_name, address, occupation, reg_date)
VALUES 
('Timothy', 'Royalty', 'Wuse Market', 'Laravel Dev', '2025-05-13'),
('Gift', 'Berry', 'Abuja', 'Fast Food Vendor', '2025-05-01');

// 3. Update a Record
UPDATE users
SET occupation = 'Pharmacist'
WHERE first_name = 'Gift' AND last_name = 'Berry';

// 4. Delete a Record
DELETE FROM users
WHERE first_name = 'Timothy' AND last_name = 'Royalty';

// 5. Select All Records
SELECT * FROM users;